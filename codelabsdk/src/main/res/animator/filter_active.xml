<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true">
        <objectAnimator
            android:propertyName="textColor"
            android:duration="300"
            android:valueFrom="@color/text_disabled_light"
            android:valueTo="@color/text_primary_light"
            android:valueType="colorType" />
    </item>
    <item>
        <objectAnimator
            android:propertyName="textColor"
            android:duration="300"
            android:valueFrom="@color/text_primary_light"
            android:valueTo="@color/text_disabled_light"
            android:valueType="colorType" />
    </item>
</selector>
